{
    "include": ["**/*.ts"],
    "compilerOptions": {
        "target": "ES2018",
        "module": "commonjs",
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "moduleResolution": "node",
        "typeRoots": ["./src/types/*", "./node_modules/@types"],
        "esModuleInterop": true
    }
}
